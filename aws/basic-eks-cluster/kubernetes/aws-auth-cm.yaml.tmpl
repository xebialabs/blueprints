apiVersion: v1
kind: ConfigMap
metadata:
  name: aws-auth
  namespace: kube-system
data:
  mapRoles: |
    - rolearn: ##NodeInstanceRole##
      username: system:node:{{EC2PrivateDNSName}}
      groups:
        - system:bootstrappers
        - system:nodes
  {{if .AddIAMUser }}
  mapUsers: |
    - userarn: ##EksUserArn##
      username: ##EksUser##
      groups:
        - system:masters
  {{end}}