{{$app := .AppName | kebabcase}}
apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: {{$app}}
  type: core.Directory
  children:
  - name: K8S
    type: core.Directory
    children:
    - name: {{$app}}-invoice-mysql
      type: udm.Application
      children:
      - name: !value BUILD_ID
        type: udm.DeploymentPackage
        deployables:
        - name: {{$app}}-invoice-mysql
          type: k8s.ResourcesFile
          file: !file ../invoice/build/kubernetes-microservice-ecommerce/invoice-mysql.yml
          tags:
          - {{.Namespace}}
    - name: {{$app}}-invoice
      type: udm.Application
      children:
      - name: !value BUILD_ID
        type: udm.DeploymentPackage
        deployables:
        - name: {{$app}}-invoice-deployment
          type: k8s.ResourcesFile
          file: !file ../invoice/build/kubernetes-microservice-ecommerce/invoice-deployment.yml
          tags:
          - {{.Namespace}}
        - name: {{$app}}-invoice-svc
          type: k8s.ResourcesFile
          file: !file ../invoice/build/kubernetes-microservice-ecommerce/invoice-service.yml
          tags:
          - {{.Namespace}}
