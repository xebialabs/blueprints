{{$app := .AppName | kebabcase}}
apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: {{$app}}
  type: core.Directory
  children:
    - name: K8S
      type: core.Directory
      children:
      - name: {{$app}}-notification-mongodb
        type: udm.Application
        children:
        - name: !value BUILD_ID
          type: udm.DeploymentPackage
          deployables:
          - name: {{$app}}-notification-mongodb
            type: k8s.ResourcesFile
            file: !file ../notification/build/kubernetes-microservice-ecommerce/notification-mongodb.yml
            tags:
            - {{.Namespace}}
      - name: {{$app}}-notification
        type: udm.Application
        children:
        - name: !value BUILD_ID
          type: udm.DeploymentPackage
          deployables:
          - name: {{$app}}-invoice-notification
            type: k8s.ResourcesFile
            file: !file ../notification/build/kubernetes-microservice-ecommerce/notification-deployment.yml
            tags:
            - {{.Namespace}}
          - name: {{$app}}-notification-svc
            type: k8s.ResourcesFile
            file: !file ../notification/build/kubernetes-microservice-ecommerce/notification-service.yml
            tags:
            - {{.Namespace}}
