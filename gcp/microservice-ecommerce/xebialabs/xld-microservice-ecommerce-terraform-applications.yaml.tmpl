{{$app := .AppName | kebabcase}}
{{$clusterName := .ClusterName | kebabcase}}
apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: {{$app}}
  type: core.Directory
  children:
{{if .ProvisionCluster}}
# Provision GKE cluster using Terraform templates
  - name: GKE-TERRAFORM
    type: core.Directory
    children:
    - name: {{$app}}-terraform-gke
      type: udm.Application
      children:
      - name: '1.0.0'
        type: udm.DeploymentPackage
        deployables:
        - name: {{$app}}-gke
          type: terraform.Module
          file: !file ../terraform-microservice-ecommerce
          inputVariables:
            project_id: {{.GCPProjectID}}
            name: {{$app}}
            region: {{.GCPRegion}}
            gke_master_user: {{.K8SMasterUser}}
            gke_master_pass: {{.K8SMasterPassword}}
          environmentPath: gcp-gke-{{$clusterName}}

{{end}}
  - name: K8S
    type: core.Directory
{{if .ProvisionCluster}}
# Provision K8s namespace
    children:
    - name: {{$app}}-namespace
      type: udm.Application
      children:
      - name: '1.0.0'
        type: udm.DeploymentPackage
        deployables:
        - name: {{.Namespace}}
          type: k8s.NamespaceSpec
          namespaceName: '{{.Namespace}}'
{{end}}
