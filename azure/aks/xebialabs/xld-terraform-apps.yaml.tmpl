{{$clusterName := .ClusterName | kebabcase}}

apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: {{$clusterName}}
  type: core.Directory
  children:
  - name: aks-terraform
    type: core.Directory
    children:
    - name: {{$clusterName}}-aks-terraform
      type: udm.Application
      children:
      - name: '1.0.0'
        type: udm.DeploymentPackage
        deployables:
        - name: {{$clusterName}}-aks-terraform-module
          type: terraform.Module
          file: !file ../terraform
          inputVariables:
            aks_name: {{$clusterName}}
            resource_group_location: {{.resource_group_location}}
            client_id: {{.client_id}}
            client_secret: {{.client_secret}}
            tenant_id: {{.tenant_id}}
            subscription_id: {{.subscription_id}}
          boundTemplates:
          - "../aks-{{$clusterName}}"
          - "../aks-{{$clusterName}}-env"

        templates:
        # creates the required XLD infrastructure entries
        - name: aks-{{$clusterName}}
          type: template.k8s.Master
          apiServerURL: '{{"{{%outputVariables.host%}}"}}'
          token: '{{"{{%outputVariables.token%}}"}}'
          skipTLS: true
          instanceName: {{$clusterName}}/aks-{{$clusterName}}
          children:
          - name: default
            type: template.k8s.Namespace

        # creates a new environment for Kubernetes deployments
        - name: aks-{{$clusterName}}-env
          type: template.udm.Environment
          members:
          - "../aks-{{$clusterName}}"
          - "../aks-{{$clusterName}}/default"
          instanceName: {{$clusterName}}/aks-{{$clusterName}}