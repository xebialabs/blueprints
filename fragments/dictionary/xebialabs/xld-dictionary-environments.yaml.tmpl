{{ $dir := .DictionaryDirectoryName | kebabcase }}
apiVersion: xl-deploy/v1
kind: Environments
spec:
{{- $environments := list "dev" "test" "prod" }}
{{- range $env := $environments }}
- name: {{$dir}} ({{$env}})
  type: core.Directory
  children:
  - name: {{ $.DictionaryName }}
    type: udm.EncryptedDictionary
    entries:
      {{- $splitKeys := splitList "," $.DictionaryKeys }}
      {{- range $key := $splitKeys }}
      {{ $key | trim }}: ""
      {{- end }}
{{- end }}
